<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Page Title</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="/stylesheets/bootstrap.css" rel="stylesheet" type="text/css">

</head>
<body>
  <div class="container">
    <h1 style="margin-top:5%">Books Data</h1><br>
    <a href="/form">Add Book</a>
    <br><br>
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <td>id</td>
            <td>name</td>
            <td>price</td>
          </tr>
        </thead>
        <tbody>
        <% books.forEach(function (item) { %>
          <tr>  
              <td><%= item.id %></td>  
              <td><%= item.name %></td>
              <td><%= item.price %></td>
              <td><a href="/delete?id=<%= item.id %>" onClick="return confirm('Are you sure to delete?')">Delete</a></td>
              <td><a href="/edit?id=<%= item.id %>">Edit</a></td>
          </tr>                                   
        <% }); %>
        </tbody>
        
      </table>
    </div>
  </div>
</body>
</html>