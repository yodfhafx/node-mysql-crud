<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Movies Dashboard</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="/stylesheets/bootstrap.css" rel="stylesheet" type="text/css">

</head>
<body>
  <div class="container">
    <h1 style="margin-top:5%">Movies Data</h1>
    <br><br>
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <td>id</td>
            <td>name</td>
            <td>image_url</td>
          </tr>
        </thead>
        <tbody>
        <% movies.forEach(function (item) { %>
          <tr>  
              <td><%= item.id %></td>  
              <td><%= item.name %></td>
              <td><img src="<%= item.image_url %>" width="100px" height="220px"></td>
          </tr>                                   
        <% }); %>
        </tbody>
        
      </table>
    </div>
  </div>
</body>
</html>